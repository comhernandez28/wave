{
	"name": "wave-api",
	"version": "1.0.0",
	"type": "module",
	"description": "An API for the Wave App",
	"main": "index.js",
	"engines": {
		"node": "16.14.0",
		"npm": "8.5.3"
	},
	"scripts": {
		"start": "node index.js",
		"server": "nodemon index.js",
		"client": "npm run start --prefix client",
		"install-client": "npm install --prefix client",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"buildClient": "npm run build --prefix client",
		"build": "concurrently \"npm run start\" \"npm run buildClient\"",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"author": "Omar Hernandez",
	"license": "ISC",
	"dependencies": {
		"axios": "^0.26.1",
		"concurrently": "^7.0.0",
		"cookie-session": "^2.0.0",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"mongoose": "^6.2.4",
		"nodemon": "^2.0.15",
		"passport": "^0.5.2",
		"passport-google-oauth20": "^2.0.0"
	}
}
